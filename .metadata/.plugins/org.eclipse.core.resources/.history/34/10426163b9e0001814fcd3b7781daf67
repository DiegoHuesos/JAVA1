import java.util.Scanner;
import java.io.*;

public class ManejadorCadenas {
	
	//Ejercicio 1:
	//a)
	public static String soloPares(String str){
		String newString = "";
		for(int i=0; i<str.length(); i++)
			if(i%2==0)
				newString+= str.charAt(i);
		return newString; 
	}
	
	//b)
	public static int numIncidencias(String str, char c){
		int respIncidencias=0;
		for(int i=0; i<str.length(); i++)
			if(str.charAt(i)==c)
				respIncidencias++;
		return respIncidencias;
	}
	
	//perrosssaa
	//0123456789
	//perrossaaa
	//perrossaaa
	
	//Ejercicio 2:
	public static String borraS(String str){
		String resp="";
		for(int i=0; i<str.length(); i++)
			if(str.charAt(i) != 's')
				resp+= str.charAt(i);
			else{
				resp+='s';
				i+=2;
			}
		return resp;			
	}
	
	//Ejercicio 3:
	
	
//Main:Ejecutable:	
	public static void main(String[]args){
		String machado="Caminante no hay camino, se hace camino al andar.";
		String sss="Yo sssoy un sssalsssero.";
		File archivo;
		Scanner lectura;
		
		//1.- a)
		System.out.println(ManejadorCadenas.soloPares(machado));
		//1.- b)
		System.out.println(ManejadorCadenas.numIncidencias(machado, 'a'));
		
		//2
		System.out.println(ManejadorCadenas.borraS(sss));
		
		//3
	}

}
