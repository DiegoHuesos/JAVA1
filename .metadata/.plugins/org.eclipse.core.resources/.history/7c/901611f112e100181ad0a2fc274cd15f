import java.util.Scanner;
import java.io.*;

public class ManejadorCadenas {
	
	//Ejercicio 1:
	//a)
	public static String soloPares(String str){
		String newString = "";
		for(int i=0; i<str.length(); i++)
			if(i%2==0)
				newString+= str.charAt(i);
		for(int i=1;i<str.length(); i+=2)
			newString+= str.charAt(i);
		return newString; 
	}
	
	//b)
	public static int numIncidencias(String str, char c){
		int respIncidencias=0;
		for(int i=0; i<str.length(); i++)
			if(str.charAt(i)==c)
				respIncidencias++;
		return respIncidencias;
	}
	
	//perrosssaa
	//0123456789
	//perrossaaa
	//perrossaaa
	
	//Ejercicio 2:
	public static String borraS(String str){
		String resp="";
		for(int i=0; i<str.length(); i++)
			if(str.charAt(i) != 's')
				resp+= str.charAt(i);
			else{
				resp+='s';
				i+=2;
			}
		return resp;			
	}
	char c='d';
	
	//Ejercicio 3:
	
